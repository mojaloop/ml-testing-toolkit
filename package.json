{
  "name": "ml-testing-toolkit",
  "description": "Self Testing Toolkit for Mojaloop implementations",
  "version": "9.2.0",
  "license": "Apache-2.0",
  "author": "ModusBox",
  "contributors": [
    "Vijay Kumar <vijaya.guthi@modusbox.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mojaloop/ml-testing-toolkit.git"
  },
  "bugs": "https://github.com/mojaloop/ml-testing-toolkit/issues",
  "config": {},
  "bin": "src/index.js",
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "client",
      "test",
      "postman",
      "documents",
      "spec_files",
      "simulator"
    ]
  },
  "pre-commit": [
    "standard"
  ],
  "scripts": {
    "start": "node src/index.js",
    "standard": "standard",
    "dev": "nodemon src/index.js",
    "test": "npm run test:unit",
    "test:unit": "jest --testMatch '**/test/unit/**/*.test.js'",
    "test:int": "jest --reporters=default --reporters=jest-junit --testMatch '**/test/integration/**/*.test.js'",
    "test:coverage": "jest --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.js'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.test.js'",
    "test:junit": "jest --reporters=default --reporters=jest-junit --testMatch '**/test/unit/**/*.test.js'",
    "test:integration": "./test/integration-runner.sh ",
    "cover": "npx nyc --all report --reporter=lcov npm run test",
    "lint": "eslint --ignore-path ../.eslintignore .",
    "build": "docker build -t mojaloop-testing-toolkit:local -f ./Dockerfile .",
    "run": "docker run -p 5000:5000 --rm ",
    "generate-docs": "jsdoc -c jsdoc.json",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "genexec": "pkg -t node8-win ."
  },
  "dependencies": {
    "@hapi/basic": "5.1.1",
    "@hapi/boom": "8.0.1",
    "@hapi/good": "8.2.4",
    "@hapi/hapi": "19.1.1",
    "@hapi/inert": "5.2.2",
    "@hapi/vision": "5.5.4",
    "@mojaloop/sdk-standard-components": "^8.6.9",
    "@now-ims/hapi-now-auth": "2.0.0",
    "@types/socket.io": "^2.1.4",
    "axios": "^0.19.2",
    "blipp": "4.0.1",
    "bunyan": "^1.8.12",
    "commander": "4.0.0",
    "docdash": "1.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "faker": "^4.1.0",
    "fs": "0.0.1-security",
    "hapi-auth-bearer-token": "^6.1.4",
    "hapi-openapi": "1.2.4",
    "hapi-swagger": "10.3.0",
    "ilp-packet": "^2.2.0",
    "js-yaml": "^3.13.1",
    "json-ref-lite": "^1.1.0",
    "json-refs": "^3.0.13",
    "json-rules-engine": "5.0.3",
    "json-schema-faker": "^0.5.0-rc23",
    "json-schema-ref-parser": "^7.1.3",
    "lodash": "^4.17.15",
    "mustache": "3.1.0",
    "npm-run-all": "4.1.5",
    "openapi-backend": "^2.3.5",
    "parse-strings-in-object": "1.2.0",
    "path": "^0.12.7",
    "rc": "1.2.8",
    "selectn": "^1.1.2",
    "socket.io": "^2.3.0",
    "uuid4": "1.1.4"
  },
  "devDependencies": {
    "@types/jest": "24.0.22",
    "eslint": "6.6.0",
    "get-port": "5.0.0",
    "jest": "^25.1.0",
    "jest-junit": "9.0.0",
    "jsdoc": "3.6.3",
    "nodemon": "1.19.4",
    "npm-audit-resolver": "2.1.0",
    "npm-check-updates": "3.2.1",
    "nyc": "14.1.1",
    "parse-strings-in-object": "1.2.0",
    "pre-commit": "1.2.2",
    "proxyquire": "2.1.3",
    "sinon": "7.5.0",
    "standard": "14.3.1",
    "supertest": "^4.0.2",
    "swagmock": "1.0.0",
    "tap-xunit": "2.4.1"
  },
  "generator-swaggerize": {
    "version": "4.1.0"
  }
}
